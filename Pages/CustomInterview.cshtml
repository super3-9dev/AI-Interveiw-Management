@page
@model InterviewBot.Pages.CustomInterviewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Custom Interview"];
    var currentCulture = HttpContext.Request.Query["culture"].ToString();
    if (string.IsNullOrEmpty(currentCulture))
    {
        currentCulture = HttpContext.Request.Cookies["culture"] ?? "en";
    }
}

<div class="custom-interview-container">
    <div class="custom-interview-card">
        <div class="card-header">
            <h2 class="card-title">@Localizer["Create a Custom Interview"]</h2>
            <p class="card-subtitle">@Localizer["Create your own personalized interview by entering a topic and description."]</p>
        </div>

        <div class="card-body">
            <form method="post">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success" role="alert">
                        @Model.SuccessMessage
                    </div>
                }

                <div class="form-group">
                    <label asp-for="InterviewTopic" class="form-label">@Localizer["Interview Topic"]</label>
                    <input asp-for="InterviewTopic" type="text" class="form-control"
                        placeholder="@Localizer["Please enter the topic of the interview"]">
                    <span asp-validation-for="InterviewTopic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">@Localizer["Description"]</label>
                    <textarea asp-for="Description" class="form-control" rows="4"
                        placeholder="@Localizer["Please enter the description of the interview"]"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary generate-btn">
                        @Localizer["Generate Interview"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .custom-interview-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 90px);
        padding: 2rem;
    }

    .custom-interview-card {
        background: white;
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        overflow: hidden;
    }

    .card-header {
        padding: 2rem 2rem 1rem 2rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .card-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 0.5rem 0;
    }

    .card-subtitle {
        color: #6b7280;
        font-size: 0.875rem;
        margin: 0;
        line-height: 1.5;
    }

    .card-body {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #d1d5db;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        line-height: 1.5;
        color: #374151;
        background-color: white;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .form-actions {
        margin-top: 2rem;
    }

    .generate-btn {
        width: 100%;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        background-color: #3b82f6;
        border: 1px solid #3b82f6;
        color: white;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }

    .generate-btn:hover {
        background-color: #2563eb;
        border-color: #1d4ed8;
    }

    .generate-btn:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .custom-interview-container {
            padding: 1rem;
        }

        .card-header,
        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.5rem;
        }
    }

    @@media (max-width: 576px) {
        .custom-interview-container {
            padding: 0.5rem;
        }

        .card-header,
        .card-body {
            padding: 1rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
