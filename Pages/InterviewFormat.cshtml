@page
@model InterviewBot.Pages.InterviewFormatModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Choose Interview Format"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @if (Model.ShowDefaultPasswordAlert)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <strong>@Localizer["You have never signed up!"]</strong> @Localizer["So I gonna set your password as default password."] (<b>Welcome123!</b>)
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">@Localizer["Choose Your Interview Format"]</h2>
                    <p class="text-muted text-center mb-4">
                        @Localizer["Please choose your preferred interview format below to begin your online session."]
                    </p>
                    
                    <div class="row g-4">
                        <!-- Text Interview Option -->
                        <div class="col-md-6">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="bi bi-chat-dots text-primary" style="font-size: 3rem;"></i>
                                    </div>
                                    <form method="post" asp-page-handler="TextInterview">
                                        <input type="hidden" name="Email" value="@Model.Email" />
                                        <input type="hidden" name="SubTopicId" value="@Model.SubTopicId" />
                                        <button type="submit" class="btn btn-primary btn-lg w-100">
                                            <i class="bi bi-chat-dots me-2"></i>@Localizer["Text Interview"]
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Voice Interview Option -->
                        <div class="col-md-6">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="bi bi-mic text-success" style="font-size: 3rem;"></i>
                                    </div>
                                    <form method="post" asp-page-handler="VoiceInterview">
                                        <input type="hidden" name="Email" value="@Model.Email" />
                                        <input type="hidden" name="SubTopicId" value="@Model.SubTopicId" />
                                        <button type="submit" class="btn btn-success btn-lg w-100">
                                            <i class="bi bi-mic me-2"></i>@Localizer["Voice Interview"]
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-4" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 