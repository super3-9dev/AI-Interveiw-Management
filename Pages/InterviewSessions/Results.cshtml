@page
@model InterviewBot.Pages.InterviewSessions.ResultsModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Interview Results"];
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 text-primary mb-0">
                    <i class="bi bi-clipboard-data me-2"></i>@Localizer["Interview Results"]
                </h1>
                <div class="d-flex gap-2">
                    <a href="/InterviewSessions" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>@Localizer["Back to Sessions"]
                    </a>
                    <a href="/InterviewSessions/Export?id=@Model.Session.Id" class="btn btn-primary">
                        <i class="bi bi-download me-1"></i>@Localizer["Export PDF"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Score Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-4">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <div class="score-circle mx-auto mb-3">
                                                            <div class="score-number">@(Model.Session.Result?.Score ?? 0)</div>
                            <div class="score-label">@Localizer["out of 100"]</div>
                            </div>
                        </div>
                        <div class="col-md-8 text-start">
                            <h3 class="text-primary mb-2">@Model.Session.SubTopic.Title</h3>
                            <div class="score-badge mb-3">
                                @{
                                    var score = Model.Session.Result?.Score ?? 0;
                                    var badgeClass = score >= 80 ? "bg-success" : score >= 60 ? "bg-warning" : "bg-danger";
                                    var performance = score >= 80 ? "Excellent" : score >= 60 ? "Good" : "Needs Improvement";
                                }
                                <span class="badge @badgeClass fs-6 px-3 py-2">@Localizer[@performance] @Localizer["Performance"]</span>
                            </div>
                            <div class="progress mb-2" style="height: 8px;">
                                <div class="progress-bar @(score >= 80 ? "bg-success" : score >= 60 ? "bg-warning" : "bg-danger")" 
                                     style="width: @score%"></div>
                            </div>
                            <small class="text-muted">@Localizer["Completion Date"]: @Model.Session.EndTime?.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Candidate Information -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>@Localizer["Candidate Information"]</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p class="mb-2"><strong>@Localizer["Name"]:</strong></p>
                            <p class="mb-2"><strong>@Localizer["Email"]:</strong></p>
                            <p class="mb-2"><strong>@Localizer["Education"]:</strong></p>
                            <p class="mb-0"><strong>@Localizer["Experience"]:</strong></p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2 text-muted">@Model.Session.CandidateName</p>
                            <p class="mb-2 text-muted">@Model.Session.CandidateEmail</p>
                            <p class="mb-2 text-muted">@Model.Session.CandidateEducation</p>
                            <p class="mb-0 text-muted">@Model.Session.CandidateExperience @Localizer["years"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>@Localizer["Interview Details"]</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p class="mb-2"><strong>@Localizer["Topic"]:</strong></p>
                            <p class="mb-2"><strong>@Localizer["Duration"]:</strong></p>
                            <p class="mb-2"><strong>@Localizer["Questions"]:</strong></p>
                            <p class="mb-0"><strong>@Localizer["Status"]:</strong></p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2 text-muted">@Model.Session.SubTopic.Topic.Title</p>
                            <p class="mb-2 text-muted">
                                @if (Model.Session.EndTime.HasValue)
                                {
                                    @((Model.Session.EndTime - Model.Session.StartTime)?.ToString(@"hh\:mm\:ss"))
                                }
                                else
                                {
                                    <text>@Localizer["Not completed"]</text>
                                }
                            </p>
                            <p class="mb-2 text-muted">@(Model.Session.Result?.Questions?.Count ?? 0) @Localizer["answered"]</p>
                            <p class="mb-0">
                                <span class="badge bg-success">@Localizer["Completed"]</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Evaluation Section -->
    @if (!string.IsNullOrEmpty(Model.Session.Result?.Evaluation))
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-chat-square-text me-2"></i>@Localizer["Detailed Evaluation"]</h5>
                    </div>
                    <div class="card-body">
                        <div class="evaluation-content p-3 bg-light rounded">
                            @Html.Raw(Model.Session.Result.Evaluation.Replace("\n", "<br>"))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Questions & Answers Section -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-question-circle me-2"></i>@Localizer["Questions &amp; Answers"]</h5>
                </div>
                <div class="card-body">
                    @if (Model.Session.Result?.Questions != null && Model.Session.Result.Questions.Any())
                    {
                        <div class="accordion" id="qaAccordion">
                            @foreach (var qa in Model.Session.Result.Questions)
                            {
                                <div class="accordion-item border-0 mb-3">
                                    <h2 class="accordion-header" id="heading-@qa.Id">
                                        <button class="accordion-button collapsed bg-light" type="button" 
                                                data-bs-toggle="collapse" data-bs-target="#collapse-@qa.Id">
                                            <div class="d-flex align-items-center w-100">
                                                <span class="badge bg-primary me-3">Q@(Model.Session.Result.Questions.IndexOf(qa) + 1)</span>
                                                <span class="question-text">@qa.Question</span>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="collapse-@qa.Id" class="accordion-collapse collapse">
                                        <div class="accordion-body bg-white">
                                            <div class="row">
                                                <div class="col-12">
                                                    <h6 class="text-primary mb-2">@Localizer["Your Answer"]:</h6>
                                                    <div class="answer-content p-3 bg-light rounded mb-3">
                                                        @qa.Answer
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(qa.Feedback))
                                                    {
                                                        <h6 class="text-success mb-2">@Localizer["Feedback"]:</h6>
                                                        <div class="feedback-content p-3 bg-success bg-opacity-10 rounded">
                                                            @qa.Feedback
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">@Localizer["No questions available for this session."]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .score-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #007bff, #0056b3);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
    }

    .score-number {
        font-size: 2.5rem;
        font-weight: bold;
        line-height: 1;
    }

    .score-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .evaluation-content {
        font-size: 1rem;
        line-height: 1.6;
        color: #495057;
    }

    .question-text {
        font-weight: 500;
        color: #495057;
    }

    .answer-content {
        font-size: 0.95rem;
        line-height: 1.5;
        color: #6c757d;
    }

    .feedback-content {
        font-size: 0.9rem;
        line-height: 1.5;
        color: #198754;
    }

    .accordion-button:not(.collapsed) {
        background-color: #e7f3ff;
        color: #0d6efd;
    }

    .accordion-button:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
    }
</style>