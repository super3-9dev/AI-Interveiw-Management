        .add-students-section {
            margin-top: 1rem;
        }

        .add-students-section h2 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin: 0 0 1.5rem 0;
        }

        .add-students-section .form-label {
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.5rem;
            display: block;
        }

