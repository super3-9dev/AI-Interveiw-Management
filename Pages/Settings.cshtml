@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Settings"];
    var currentCulture = HttpContext.Request.Query["culture"].ToString();
    if (string.IsNullOrEmpty(currentCulture))
    {
        currentCulture = HttpContext.Request.Cookies["culture"] ?? "en";
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@Localizer["Settings"]</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">@Localizer["Settings page is coming soon."]</p>
                    <a href="/@(!string.IsNullOrEmpty(currentCulture) ? $"?culture={currentCulture}" : "")" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> @Localizer["Back to Home"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
