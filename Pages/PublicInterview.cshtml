@page "{subTopicId:int?}"
@model InterviewBot.Pages.PublicInterviewModel
@{
    ViewData["Title"] = "Start Interview";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-sm" style="max-width: 400px; width: 100%; border-radius: 16px;">
        <div class="card-body p-4">
            <h2 class="text-center mb-2" style="font-weight: 700;">Verify Your Email</h2>
            <p class="text-center text-muted mb-4" style="font-size: 1.05rem;">
                Please enter your email to receive a<br />verification code.
            </p>
            <form method="post">
                <input type="hidden" asp-for="SubTopicId" />
                <div class="mb-3">
                    <label for="Email" class="form-label" style="font-weight: 600;">Email Address</label>
                    <input type="email"
                           class="form-control"
                           id="Email"
                           asp-for="Email"
                           placeholder="you@example.com"
                           required
                           style="background: #f8f9fa; border-radius: 8px; font-size: 1rem;">
                </div>
                <button type="submit"
                        class="btn btn-primary w-100"
                        style="font-size: 1.1rem; font-weight: 600; border-radius: 8px; padding: 0.75rem 0;">
                    Send Verification Code
                </button>
            </form>
        </div>
    </div>
</div>