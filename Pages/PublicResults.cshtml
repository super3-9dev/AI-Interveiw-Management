@page "{id:int}"
@model InterviewBot.Pages.PublicResultsModel
@{
    ViewData["Title"] = "Interview Results";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-check-circle me-2"></i>
                            Interview Completed
                        </h4>
                        <span class="badge bg-light text-dark">Public Session</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Session != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5>Interview Details</h5>
                                <p><strong>Topic:</strong> @Model.Session.SubTopic?.Topic?.Title</p>
                                <p><strong>Sub-topic:</strong> @Model.Session.SubTopic?.Title</p>
                                <p><strong>Candidate Email:</strong> @Model.Session.CandidateEmail</p>
                                <p><strong>Started:</strong> @Model.Session.StartTime.ToString("g")</p>
                                <p><strong>Completed:</strong> @Model.Session.EndTime?.ToString("g")</p>
                            </div>
                            <div class="col-md-6">
                                @if (Model.Session.Result != null)
                                {
                                    <h5>Overall Score</h5>
                                    <div class="text-center">
                                        @{
                                            var score = Model.Session.Result.Score ?? 0;
                                            var performance = score >= 80 ? "Excellent" : score >= 60 ? "Good" : "Needs Improvement";
                                        }
                                        <div class="display-4 text-primary">@score%</div>
                                        <p class="text-muted">@performance Performance</p>
                                    </div>
                                }
                            </div>
                        </div>

                        @if (Model.Session.Result != null && Model.Session.Result.Questions?.Any() == true)
                        {
                            <h5>Question-by-Question Analysis</h5>
                            <div class="accordion" id="questionsAccordion">
                                @foreach (var question in Model.Session.Result.Questions.Select((q, index) => new { Question = q, Index = index + 1 }))
                                {
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading@(question.Index)">
                                            <button class="accordion-button @(question.Index == 1 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(question.Index)" aria-expanded="@(question.Index == 1 ? "true" : "false")" aria-controls="collapse@(question.Index)">
                                                <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                                    <span>Question @question.Index</span>
                                                    <span class="badge @(question.Question.Score >= 80 ? "bg-success" : question.Question.Score >= 60 ? "bg-warning" : "bg-danger")">
                                                        @question.Question.Score%
                                                    </span>
                                                </div>
                                            </button>
                                        </h2>
                                        <div id="collapse@(question.Index)" class="accordion-collapse collapse @(question.Index == 1 ? "show" : "")" aria-labelledby="heading@(question.Index)" data-bs-parent="#questionsAccordion">
                                            <div class="accordion-body">
                                                <div class="row">
                                                                                                    <div class="col-md-6">
                                                    <h6>Question:</h6>
                                                    <p>@question.Question.Question</p>
                                                </div>
                                                <div class="col-md-6">
                                                    <h6>Your Answer:</h6>
                                                    <p>@question.Question.Answer</p>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(question.Question.Feedback))
                                            {
                                                <div class="mt-3">
                                                    <h6>Feedback:</h6>
                                                    <p>@question.Question.Feedback</p>
                                                </div>
                                            }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Session.Summary))
                        {
                            <div class="mt-4">
                                <h5>Interview Summary</h5>
                                <div class="alert alert-info">
                                    @Model.Session.Summary
                                </div>
                            </div>
                        }

                        <div class="mt-4 text-center">
                            <a href="/PublicInterview/@Model.Session.SubTopicId" class="btn btn-primary">
                                <i class="bi bi-arrow-clockwise me-2"></i>
                                Take Another Interview
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 